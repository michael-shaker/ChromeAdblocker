{
    "name": "Chrome Extension Adblocker",
    "version": "1.0",
    "description": "Mike's adblocker extension for Chrome.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"] 
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"

    },
    "manifest_version": 3
}